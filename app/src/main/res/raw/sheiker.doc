#include <ctime>
#include <iostream>
using namespace std;
typedef unsigned int UI;
//сортировка шейкера
void sortSheikera(int* a, int n) {
	int left = 0, right = n - 1, f = 1, r;
	while (left < right && f>0)
	{
		f = 0;
		for (int i = left; i < right; i++)
		{
			if (a[i] > a[i + 1])
			{
				int t = a[i];
				a[i] = a[i + 1];
				a[i + 1] = t;
				r = i;
				f = 1;
			}
		}
		right = r;
		for (int i = right; i > left; i--)
		{
			if (a[i - 1] > a[i])
			{
				int t = a[i];
				a[i] = a[i - 1];
				a[i - 1] = t;
				f = 1;
				r = i;
			}
		}
		left = r;
	}
	//for (int i = 0; i < n; i++) {
	//	cout << a[i] << " ";
	//}
}
